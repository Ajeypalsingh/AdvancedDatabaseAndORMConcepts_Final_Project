@model IEnumerable<AdvancedDatabaseAndORMConcepts_Final_Project.Models.List>;

@{
    ViewData["Title"] = "Home Page";
}

<H1>To Do Lists </H1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListId)
            </th >
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Number of Items
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (List l in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => l.ListId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => l.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => l.Items)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-controller="lists" asp-action="Details" asp-route-id="@l.ListId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Lists" asp-action="Create" class="btn btn-primary">Create List</a>


